@model ProjektKsiegarniBCity.ViewModels.HomeViewModel
@using ProjektKsiegarniBCity.Infrastructure

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
}
<div class="container menu-parent-div-gray">
    <div class="row">
        <div id="menu-horizontal" class="col-lg-12">
            <ul>
                @foreach (var kategoria in Model.Kategorie)
                {
                <li><a href="@Url.Action("List","Store", new { kategorie = kategoria.Name.ToString() })" class="@kategoria.ClassName">@kategoria.Name</a></li>
                }
            </ul>
        </div>
    </div>
</div>
<div id="EdgarPromotion" class="container main">
    <div class="row">
        <div class="col-lg-12">
            @foreach (var promoTitle in Model.Artykuly)
            {
                if (promoTitle.IsPromotion == true && promoTitle.ArticleId == 6)
                {
            <h2 id="EdgarPromotionHeader">
                @promoTitle.Description   
            </h2>

            <a class="productdetailslink" href="#" style="display:block;width:400px;height:300px;background-image:url(@Url.PromocjeIconPath(promoTitle.CoverFileName)">
                
            </a>
                }
            }
            <div id="EdgarRabat">

                <ul>
                    @foreach (var promocje in Model.Artykuly)
                    {
                        if (promocje.IsPromotion == true)
                        {
                    <li>
                        <div style="text-align:center;"><a href="@Url.Action("Details","Store", new { id = promocje.ArticleId })" style="display:block;width:100px;height:150px;"><img src="@Url.PromocjeIconPath(promocje.CoverFileName)" alt="Promocje" /></a></div>
                        <div><a href="@Url.Action("Details","Store", new { id = promocje.ArticleId })">@promocje.ArticleTitle</a></div>
                    </li>
                        }
                    }

                </ul>
            </div>
        </div>

    </div>

</div>
<div class="clear"> </div>
<div class="container" style="padding-left:0px;">
    <div class="row">
        <div style="max-width:75rem;">
            
            <h2 id="EdgarPromotionHeader">
                Nowości w księgarni internetowej
            </h2>
           
            <div id="NowosciBookcity">

                <ul>
                    @foreach (var nowosci in Model.Artykuly)
                    {
                        if (nowosci.IsNew == true)
                        {
                    <li>
                        <div class="Wysokosc"><a href="@Url.Action("Details","Store", new { id = nowosci.ArticleId })" style="margin:auto;display:block;width:100px;height:150px;"><img src="@Url.NowosciIconPath(nowosci.CoverFileName)"  alt="Nowości"></a></div>
                        <div style="margin-top:10px;"><a href="@Url.Action("Details","Store", new { id = nowosci.ArticleId })">@nowosci.ArticleTitle</a></div>
                    </li>
                        }
                    }
                    

                </ul>
            </div>

        </div>
    </div>
    <div class="row">
        <div style="max-width:75rem;">
            <h2 id="KOJ">
                Artykuły obcojęzyczne dostępne od ręki
            </h2>
            <div id="KsiazkiObcojezyczne">

                <ul>
                    @foreach (var obcojezyczne in Model.Artykuly)
                    {
                        if (obcojezyczne.CategoryName == "Obcojezyczne")
                        {
                    <li>
                        <div class="Wysokosc2"><a href="@Url.Action("Details","Store", new { id = obcojezyczne.ArticleId })" style="display:block;width:100px;height:150px;"><img src="@Url.ObcojezyczneIconPath(obcojezyczne.CoverFileName)" alt="Obcojęzyczne" /> </a></div>
                        <div><a href="@Url.Action("Details","Store", new { id = obcojezyczne.ArticleId })">@obcojezyczne.ArticleTitle</a></div>
                    </li>
                        }
                    }
                    

                </ul>
            </div>

        </div>
    </div>

</div>

